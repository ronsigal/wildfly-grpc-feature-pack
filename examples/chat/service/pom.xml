<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly.extras.grpc</groupId>
        <artifactId>wildfly-grpc-examples-chat</artifactId>
        <version>0.1.0.Final</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>wildfly-grpc-examples-chat-service</artifactId>
    <name>WildFly gRPC :: Examples :: Chat :: Service</name>

    <properties>
        <root.directory>${basedir}/../../..</root.directory>
        <wildfly.home>${project.build.directory}/wildfly</wildfly.home>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-grpc-examples-chat-proto</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-proto</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>wildfly-grpc-examples-chat-proto</artifactId>
                                    <version>${project.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/proto</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.xolstice.maven.plugins</groupId>
                <artifactId>protobuf-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>compile-proto</id>
                        <goals>
                            <goal>compile</goal>
                            <goal>compile-custom</goal>
                        </goals>
                        <configuration>
                            <protoSourceRoot>${project.build.directory}/proto</protoSourceRoot>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <configuration>
                    <jboss-home>${wildfly.home}</jboss-home>
                    <provisioningDir>${wildfly.home}</provisioningDir>
                    <feature-packs>
                        <feature-pack>
                            <groupId>org.wildfly</groupId>
                            <artifactId>wildfly-galleon-pack</artifactId>
                            <version>${version.wildfly}</version>
                        </feature-pack>
                        <feature-pack>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>wildfly-grpc-feature-pack</artifactId>
                            <version>${project.version}</version>
                        </feature-pack>
                    </feature-packs>
                    <layers>
                        <layer>core-server</layer>
                        <layer>web-server</layer>
                        <!-- Layers from this FP  -->
                        <layer>grpc</layer>
                    </layers>
                    <galleon-options>
                        <jboss-fork-embedded>${galleon.fork.embedded}</jboss-fork-embedded>
                    </galleon-options>
                    <log-provisioning-time>${galleon.log.time}</log-provisioning-time>
                </configuration>
                <executions>
                    <execution>
                        <id>provision-server</id>
                        <goals>
                            <goal>provision</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>ssl-none</id>
            <activation>
                <property>
                    <name>ssl</name>
                    <value>none</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>execute-commands</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <offline>true</offline>
                                    <scripts>
                                        <script>${root.directory}/ssl/configure-elytron.cli</script>
                                    </scripts>
                                    <commands>
                                        <command>embed-server</command>
                                        <command>/subsystem=grpc:write-attribute(name=key-manager-name, value="")</command>
                                        <command>stop-embedded-server</command>
                                    </commands>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>ssl-oneway</id>
            <activation>
                <property>
                    <name>ssl</name>
                    <value>oneway</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>execute-commands</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <offline>true</offline>
                                    <scripts>
                                        <script>${root.directory}/ssl/configure-elytron.cli</script>
                                    </scripts>
                                    <commands>
                                        <command>embed-server</command>
                                        <command>/subsystem=grpc:write-attribute(name=key-manager-name, value=&quot;key-manager-afcdd1f8-d1a7-4137-aa13-c45237e32428&quot;)</command>
                                        <command>stop-embedded-server</command>
                                    </commands>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>process-test-resources</phase>
                                <configuration>
                                    <target>
                                        <copy todir="${wildfly.home}/standalone/configuration" failonerror="true"
                                            overwrite="true" file="${root.directory}/ssl/server.keystore.jks" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>ssl-twoway</id>
            <activation>
                <property>
                    <name>ssl</name>
                    <value>twoway</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>execute-commands</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <offline>true</offline>
                                    <scripts>
                                        <script>${root.directory}/ssl/configure-elytron.cli</script>
                                    </scripts>
                                    <commands>
                                        <command>embed-server</command>
                                        <command>/subsystem=grpc:write-attribute(name=key-manager-name, value=&quot;key-manager-afcdd1f8-d1a7-4137-aa13-c45237e32428&quot;)</command>
                                        <command>/subsystem=grpc:write-attribute(name=trust-manager-name, value=&quot;key-manager-trust-store-eeeecd12-36f9-4156-92c7-a889383f17a1&quot;)</command>
                                        <command>stop-embedded-server</command>
                                    </commands>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <phase>process-test-resources</phase>
                                <configuration>
                                    <target>
                                        <copy todir="${wildfly.home}/standalone/configuration" failonerror="true"
                                            overwrite="true" file="${root.directory}/ssl/server.keystore.jks" />
                                        <copy todir="${wildfly.home}/standalone/configuration" failonerror="true"
                                            overwrite="true" file="${root.directory}/ssl/server.truststore.jks" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
